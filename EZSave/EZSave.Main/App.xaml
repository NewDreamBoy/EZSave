<Application
    x:Class="EZSave.Main.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:EZSave.Main">
    <Application.Resources>
        <FontFamily x:Key="SiYuanHeiTiNormal">pack://application:,,,/EZSave.Main;component/Resources/Fonts/#思源黑体 Normal</FontFamily>
        <FontFamily x:Key="SiYuanHeiTiMedium">pack://application:,,,/EZSave.Main;component/Resources/Fonts/#思源黑体 Medium</FontFamily>

        <!--  设置全局 TextBlock 样式  -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource SiYuanHeiTiMedium}" />
        </Style>
    </Application.Resources>
</Application>
